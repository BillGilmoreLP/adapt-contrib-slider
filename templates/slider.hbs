<div class="slider component-inner" role="region" aria-label="{{_globals._components._slider.ariaRegion}}" {{#if _globals._components._slider.ariaRegion}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="slider__widget component-widget {{#unless _isEnabled}} disabled {{#if _isInteractionComplete}} complete submitted show-user-answer {{#if _canShowMarking}}{{#if _isCorrect}}correct{{else}}incorrect{{/if}}{{/if}} {{/if}} {{/unless}}">
        <div class="slider__slider-holder clearfix">
            <div class="slider__scale-labels">
                <div class="slider__scale-start" tabindex="0" role="region">{{labelStart}}</div>
                <div class="slider__scale-end" tabindex="0" role="region">{{labelEnd}}</div>
            </div>
            <div class="slider__scale-numbers clearfix">
                {{#each _items}}
                    <button tabindex="0" role="button" class="base slider__scale-number" data-id="{{value}}">{{value}}</button>
                {{/each}}
                <div class="slider__model-ranges"></div>
                <div class="slider__answer component-item-color component-item-text-color"></div>
                <div class="slider__scale-marker component-item-color component-item-text-color a11y-ignore" aria-hidden="true" tabindex="-1"></div>
            </div>
            <div class="slider__scaler-wrapper clearfix">
               <div class="slider__scaler component-item-color">
                  <div class="slider__scaler-start-marker slider__line component-item-color"></div>
                  <div class="slider__scaler-markers"></div>
                  <div class="slider__scaler-end-marker slider__line component-item-color"></div>
              </div>
          </div>

            <div class="slider__background">
                <div class="slider__item component-item {{#unless _isEnabled}}{{#if _isCorrect}}correct{{else}}incorrect{{/if}}{{/unless}}">
                  <input type="range" name="" value="{{#if _userAnswer}}{{_userAnswer}}{{else}}{{_scaleStart}}{{/if}}" min="{{_scaleStart}}" max="{{_scaleEnd}}" data-rangeslider data-direction="{{#equals _marginDir "right"}}rtl{{/equals}}" {{#unless _isEnabled}} disabled{{/unless}}>
                </div>
            </div>
        </div>
    </div>
    <div class="buttons">
    </div>
</div>
